                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"mobile_number\": \"1234567890\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/forgot-password",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "forgot-password"
                            ]
                        }
                    }
